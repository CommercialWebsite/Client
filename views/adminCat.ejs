<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>Administration Produit</title>
	<% include ./partials/header %>
</head>
<body>
<% include ./partials/navbar %>
<div class="container">


<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Ajouter une catégorie</h1>

	<!-- adduser FORM -->
	<form action="/adminCat" method="post">
	    <% if (msgError.length > 0) { %>
	        <div class="alert alert-danger"> <%= msgError %> </div>
	    <% } %>
		<% if (msgValidation.length > 0) { %>
	        <div class="alert alert-success"> <%= msgValidation %> </div>
	    <% } %>
		<div class="form-group">
			<label>Nom</label>
			<input type="text" class="form-control" name="name" required>
		</div>
		
		<br>


		<button type="submit" class="btn btn-warning btn-lg">Valider</button>
	</form>	
</div>



<div class="col-sm-8 col-sm-offset-1">

	<h1><span class="fa fa-sign-in"></span>Liste des catégories</h1>

	<table class="table">
		<tr>
			<th>Nom</th>
			
			<th></th>
			<th></th>
		</tr>
		<%
		if(listCat){
			for (var i = 0; i<listCat.length; i++){
		%>

		<tr>
			<td><%= listCat[i].name %></td>
			<td><a href= "/adminCat/update/<%= listCat[i].id %>">Modifier</a></td>
			<td><a href= "/adminCat/delete/<%= listCat[i].id %>">Supprimer</a></td>
		</tr>
		
		<%
		}}
		%>
	</table>

	
	
</div>


</div><br><br>
	<% include ./partials/footer %>
</body>
</html>