<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>Administration catégorie</title>
	<% include ./partials/header %>
</head>
<body>
<% include ./partials/navbar %>
<div class="container">


<div class="col-sm-8 col-sm-offset-1">

	<h1><span class="fa fa-sign-in"></span> Modifier la catégorie :  <%= listCat.name %></h1>

	<!-- updateCat FORM -->
	<form action="/adminCat/update" method="post">
	    <% if (msgError.length > 0) { %>
	        <div class="alert alert-danger"> <%= msgError %> </div>
	    <% } %>
		<% if (msgValidation.length > 0) { %>
	        <div class="alert alert-success"> <%= msgValidation %> </div>
	    <% } %>
	<div class="form-group">
			<label>Nom</label>
			<input type="text" class="form-control" name="name" value ="<%= listCat.name %>"  required>
		</div>
        
		 <input type="hidden" name="id" value="<%= listCat.id %>">	
		 <input type="hidden" name="nameOld" value="<%= listCat.name %>">	

		 
		 
		<button type="submit" class="btn btn-warning btn-lg">Valider</button>
	</form>	
	
</div>



</div><br><br>
	<% include ./partials/footer %>
</body>
</html>